<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer" />
        <attr name="expandColor" format="color" />
        <attr name="expandText" format="string" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="android:fontFamily"/>
        <!-- Default text typeface style. -->
        <attr name="android:textStyle">
        </attr>
        <attr name="justify" format="boolean"/>
        <attr name="autoMaxLines" format="boolean"/>
        <!-- Default text typeface. -->
        <attr name="android:typeface">
        </attr>
    </declare-styleable>

    <declare-styleable name="AppCompatFontTextView">
        <attr name="android:fontFamily"/>
        <attr name="android:textStyle"/>
    </declare-styleable>

    <declare-styleable name="FontButton">
        <attr name="android:fontFamily"/>
        <attr name="android:textStyle"/>
    </declare-styleable>

    <declare-styleable name="ShimmerView">
        <attr name="reflectionColor" format="color"/>
    </declare-styleable>

</resources>